<?xml version="1.0" encoding="utf-8"?>

<com.example.santa.wunderlist.SwipeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp">
        <ImageView
            android:id="@+id/main_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"/>

        <TextView
            android:id="@+id/main_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#ff2d2d2d"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:textSize="16sp"/>

        <ImageView
            android:id="@+id/main_remindNum"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center"/>

        <TextView
            android:id="@+id/main_tipNum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#ff999999"
            android:layout_gravity="center"/>
    </LinearLayout>
</com.example.santa.wunderlist.SwipeLayout>